{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCommits": true,
    "push": false,
    "requireBranch": "main"
  },
  "github": { "release": true },
  "npm": { "publish": true, "skipChecks": true },
  "hooks": {
    "after:bump": "yarn build",
    "after:release": "yarn expo prebuild --no-install && git restore package.json && git add . && git commit --amend --no-edit && git push"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
